<% content_for :delete_select_user do %>
  <li><%= link_to 'Delect Select Users',  destroy_select_user_path( :confirm => false), :onclick => "document.getElementById('select_user').submit();".html_safe,:method => :delete%>
<% end %>

<script type="text/javascript">
$( document ).ready(function() {
  $('.bulk_user_ids').prop("checked", false);
 });
  
</script>

<%= form_tag '/destroy_select_user' , :method => :delete, :id => 'select_user'  do %>
<%= submit_tag 'Sumbit'%>
<table class='table'>
  <tr>
    <th>
    <input type="checkbox" id="check_bulk_user" onclick="bulk_user_action()" />
    </th>
    <th>Name</th>
    <th>salary</th>
    <th>contact</th>
    <th>role</th>
    <th>Under Control</th>
    <th>Goals</th>
    <th></th>
    <th></th>
    <th></th>
    <th></th>
    
  </tr>
 
  <% @users.each do |f| %>
    <tr>
<td>
<input type="checkbox" name="bulk_user_ids[]" class="bulk_user_ids" value=<%= f.id %> />
</td>
      <td><%= f.name %></td>
      <td><%= f.salary %></td>
      <td><%= f.contact %></td>
      
      <% case f.role %>
       <% when 'e' %>  
          <td>Engineer</td>
          <td><%= f.manager.name %>(M)</td>
       <% when 'm' %>  
          <td>Manager</td>
          <td><%= f.super_manager.name %>(SM)</td>
       <% when 'sm' %>  
          <td class='fa fa-user'></td>
          <td></td>
        <% else %>
          <td></td>
          <td></td>
        <% end %>

      <td>
         <% if not f.goals.empty? %>
          <%= link_to 'goals', user_goals_path(f)%>
         <% else %>
           No Goals..
         <% end %>
      </td>
      <td><%= link_to 'Show', user_path(f) %></td>
      <td><%= link_to 'Edit', edit_user_path(f) %></td>
      <td><%= link_to 'Delete', user_path(f), method: :delete, data: {confirm: "Are you sure? User is delete then no goals and comments will be aviable"}%></td>
      <td><%= link_to 'Create Goal', new_user_goal_path(f) %></td>

    </tr>
  <% end %>
</table>
<% end %>
