
<%= form_for(@user) do |f|%>
 <%= f.label :name %>
 <%= f.text_field :name %>
  <%= f.label :salary %>
 <%= f.text_field :salary %>
  <%= f.label :contact %>
 <%= f.text_field :contact %>

<%= f.label :role %>
 <%= f.select :role, [['Engineer', 'e'], ['Manager', 'm'], ['Super Manager', 'sm']], include_blank: true %>
<%= f.label :manager_id %>
 <%= f.select :manager_id, User.where(role: 'm').collect { |p| [ p.name, p.id ] }, include_blank: true %>
<%= f.label :super_manager_id %>
 <%= f.select :super_manager_id, User.where(role: 'sm').collect { |p| [ p.name, p.id ] }, include_blank: true %>
  <%= f.submit %>
<% end %>