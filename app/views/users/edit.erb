
<div  class="app_form"> 
<%= form_for(@user) do |f|%>
<div class="form-group">
 <%= f.label :name %>
 <%= f.text_field :name, class: "form-control" %>
</div>

<div class="form-group">
  <%= f.label :salary %>
 <%= f.text_field :salary, class: "form-control" %>
</div>


<div class="form-group">
  <%= f.label :contact %>
 <%= f.text_field :contact, class: "form-control" %>
</div>

<div class="form-group">
<%= f.label :role %>
 <%= f.select :role, [['Engineer', 'e'], ['Manager', 'm'], ['Super Manager', 'sm']], include_blank: true, class: "form-control" %>
</div>

<div class="form-group">
<%= f.label :manager_id %>
 <%= f.select :manager_id, User.where(role: 'm').collect { |p| [ p.name, p.id ] }, include_blank: true, class: "form-control" %>
</div>

<div class="form-group">
<%= f.label :super_manager_id %>
 <%= f.select :super_manager_id, User.where(role: 'sm').collect { |p| [ p.name, p.id ] }, include_blank: true, class: "form-control" %>
</div>

  <%= f.submit 'Edit',  class: 'btn btn-primary' %>
<% end %>
</div>